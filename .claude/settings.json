{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/enforce-principles.py\"'",
            "timeout": 20
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -lc 'python3 \"$CLAUDE_PROJECT_DIR/.claude/hooks/pre-tool-use.py\"'",
            "timeout": 60
          }
        ]
      }
    ]
  }
}